<form method='post' action='/users/signin'>
  <%= display_form_input('Username:', 'username', params[:username]) %>
  <div>
    <label for='password'> Password:
      <input type='password' name='password'/>
    </label>
  </div>

  <button type='submit'>Sign In</button>
</form>

